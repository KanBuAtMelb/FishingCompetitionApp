<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/comp_cardview"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="15dp"
    android:foreground="?selectableItemBackground"
    card_view:cardBackgroundColor="#EC7063"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="2dp"
    android:clickable="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/comp_image"
            android:layout_width="300dp"
            android:layout_height="200dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/comp_textlines"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"/>

        <LinearLayout
            android:id="@+id/comp_textlines"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/comp_image"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/comp_title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/comp_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="12dp"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/comp_reward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_margin="2dp"/>

            <TextView
                android:id="@+id/comp_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time_before_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:textSize="14dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_comp_unregister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@color/warm_grey"
                android:text="Cancel Registration"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>