<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/userProfile_image"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="3dp"
        tools:srcCompat="@tools:sample/avatars[14]" />

    <EditText
        android:id="@+id/admin_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="163dp" />

    <EditText
        android:id="@+id/admin_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="232dp" />

    <EditText
        android:id="@+id/admin_user_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="232dp" />

    <EditText
        android:id="@+id/admin_user_comp_attended"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Competition attended (Integer)"
        android:inputType="number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="296dp" />

    <Button
        android:id="@+id/admin_button_addUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add User" />

    <Button
        android:id="@+id/admin_button_addComp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Competition" />

    <EditText
        android:id="@+id/admin_comp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Comp Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/admin_comp_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Comp Date"
        android:inputType="date" />

    <EditText
        android:id="@+id/admin_comp_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Comp Start Time"
        android:inputType="time" />

    <EditText
        android:id="@+id/admin_comp_stop_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Comp Stop Time"
        android:inputType="time" />

    <EditText
        android:id="@+id/admin_comp_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Comp Topic"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/admin_comp_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dropDownWidth="wrap_content"
        android:entries="@array/comp_status"
        android:spinnerMode="dropdown" />

    <EditText
        android:id="@+id/admin_comp_winner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Comp winner"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/admin_comp_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Comp Results"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/admin_comp_geo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Comp_Geo_Range"
        android:inputType="textPersonName" />

</LinearLayout>