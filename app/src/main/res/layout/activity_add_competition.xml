<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin - Add a New Competition"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:background="@color/black_overlay"
        android:padding="8dp"
        android:layout_margin="8dp"/>

    <EditText
        android:id="@+id/add_comp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Comp Name (Compulsory)"
        android:inputType="text" />

    <EditText
        android:id="@+id/add_comp_reward"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Comp Reward (Compulsory)"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/add_comp_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Comp Date (dd/MM/yy, Compulsory)"
        android:inputType="date" />

    <EditText
        android:id="@+id/add_comp_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Comp Start Time (hh:mm, Compulsory)"
        android:inputType="time" />

    <EditText
        android:id="@+id/add_comp_stop_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Comp Stop Time (hh:mm, Compulsory)"
        android:inputType="time" />

    <EditText
        android:id="@+id/add_comp_geo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Comp_Geo (lat, lng, radius[km])"
        android:inputType="text" />

    <Spinner
        android:id="@+id/add_comp_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="Comp Type"
        android:dropDownWidth="match_parent"
        android:entries="@array/comp_type"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/add_comp_description"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:ems="10"
        android:hint="Comp_Description"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:layout_marginBottom="8dp"/>



    <Button
        android:id="@+id/admin_button_addComp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:layout_margin="16dp"
        android:text="Add Competition" />

</LinearLayout>